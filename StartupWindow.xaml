<Window x:Class="CrossStruc.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrossStruc"
        mc:Ignorable="d"
        Title="CrossStruc" Height="184" Width="275"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanMinimize">
    <TabControl Grid.Column="2" Grid.Row="2" >
        <TabItem Header="RC Design">
            <Grid ShowGridLines="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="135"/>
                    <ColumnDefinition Width="135"/>
                </Grid.ColumnDefinitions>
                <Button Content="RC COLUMN" Foreground="Blue" Background="Wheat" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Height="50" Width="120" Grid.Row="0" Click="ConcreteColumnClick" Margin="10,5,5,5">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="RC BEAM" Foreground="Blue" Background="Wheat" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Height="50" Width="120" Grid.Row="0" Click="ConcreteBeamClick" Margin="5,5,10,5">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="RC WALL" Foreground="Blue" Background="Wheat" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Height="50" Width="120" Grid.Row="1" Margin="10,5,5,5">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="RC SLAB" Foreground="Blue" Background="Wheat" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Height="50" Width="120" Grid.Row="1" Click="ConcreteSlabClick" Margin="5,5,10,5">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </TabItem>
        <TabItem Header="Steel Design">

        </TabItem>
        <TabItem Header="Other">

        </TabItem>
    </TabControl>
</Window>
